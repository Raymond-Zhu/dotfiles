rofi.opacity: 85
rofi.padding: 400
rofi.eh: 2
rofi.font: System San Francisco Display 18
rofi.lines: 5
rofi.width: 100
rofi.line-margin: 5
rofi.hlbg: #3b4042
rofi.hlfg: wht
rofi.background: bg
rofi.foreground: fg
rofi.bc: bg

! Set the font
URxvt*font: xft:gohufont:pixelsize=14:antialias=false, xft:Inconsolata for Powerline:pixelsize=14
URxvt*boldFont: xft:gohufont:pixelsize=14:antialias=false

! Line spacing
URxvt*lineSpace: 2

! Terminal window size
URxvt*geometry: 65x17

! Disable scrollbar
URxvt*scrollBar: false

! Set urxvt as login shell
URxvt.internalBorder: 15

! Enable copy/paste with Ctrl-Shift-C/V
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.perl-ext-common: default,clipboard
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! Size of cursor
Xcursor.size: 16

! Colors
*background: bg
*foreground: fg
*cursorColor: cyn

